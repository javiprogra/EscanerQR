<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscanerQR.View.CarnetPopup"
             BackgroundColor="#80000000"
             Padding="30"
             Title="CarnetPopup">


    <Border
        BackgroundColor="White"
        Padding="20"
        StrokeShape="RoundRectangle 20"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <StackLayout Spacing="15" HorizontalOptions="Center">
            <Image x:Name="ResultadoImagen" HeightRequest="100" WidthRequest="100"/>
            <Label x:Name="ResultadoTexto" FontSize="20" HorizontalOptions="Center" TextColor="Black"/>
            <Button Text="Cerrar" Clicked="OnCerrarClicked" BackgroundColor="LightGrey" />
        </StackLayout>

    </Border>
    
</ContentPage>